<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sftp_for_android.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Spotify-like colors -->
            <Color x:Key="SpotifyGreen">#1DB954</Color>
            <Color x:Key="SpotifyBlack">#121212</Color>
            <Color x:Key="SpotifyDarkGray">#212121</Color>
            <Color x:Key="SpotifyLightGray">#B3B3B3</Color>
            <Color x:Key="SpotifyWhite">#FFFFFF</Color>

            <!-- Text Styles -->
            <Style x:Key="TitleLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource SpotifyWhite}" />
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Start" />
            </Style>

            <Style x:Key="SubtitleLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource SpotifyLightGray}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Start" />
            </Style>

            <Style x:Key="BodyLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource SpotifyWhite}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalOptions" Value="Start" />
            </Style>

            <Style x:Key="CaptionLabelStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{StaticResource SpotifyLightGray}" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="HorizontalOptions" Value="Start" />
            </Style>

            <!-- Button Styles -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource SpotifyGreen}" />
                <Setter Property="TextColor" Value="{StaticResource SpotifyWhite}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource SpotifyDarkGray}" />
                <Setter Property="TextColor" Value="{StaticResource SpotifyWhite}" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>

            <!-- Entry Style -->
            <Style x:Key="SpotifyEntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="{StaticResource SpotifyDarkGray}" />
                <Setter Property="TextColor" Value="{StaticResource SpotifyWhite}" />
                <Setter Property="PlaceholderColor" Value="{StaticResource SpotifyLightGray}" />
                <Setter Property="HeightRequest" Value="40" />
            </Style>

            <!-- Frame Style -->
            <Style x:Key="CardFrameStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource SpotifyDarkGray}" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="Margin" Value="0,8" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

             